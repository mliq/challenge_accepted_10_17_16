document.querySelector("form").addEventListener("submit", function(event) {
    if (this.elements.value.value === 'front-end') {
        document.getElementsByClassName('input-error')[0].style.display = 'none';
    }
    else {
        document.getElementsByClassName('input-error')[0].style.display = 'block';
        document.getElementsByClassName('input-field_text')[0].style.border = '1px solid #e84f4f';
        event.preventDefault();
    }
});